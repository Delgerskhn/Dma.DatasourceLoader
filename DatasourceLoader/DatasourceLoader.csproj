<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Dma.$(AssemblyName)</PackageId>
    <Title>Data source loader for IQueryable. Filters and sorters.</Title>
    <Authors>Delgerskhn</Authors>
    <Description>A generic filter, sorter query builder based on runtime state for IQueryable class.</Description>
    <PackageProjectUrl>https://github.com/delgerskhn/datasourceloader</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/delgerskhn/datasourceloader</RepositoryUrl>
    <PackageTags>IQueryable, Filters, Orders, Data source</PackageTags>
    <PackageReleaseNotes>This is a beta release for testing purpose. Not production ready.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
